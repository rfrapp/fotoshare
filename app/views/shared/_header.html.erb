
<div class="row demo-row">
    <div class="col-xs-12">
        <nav class="navbar navbar-inverse navbar-embossed topnav" role="navigation">
      		<div class="navbar-header">
        		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-01">
          			<span class="sr-only">Toggle navigation</span>
        		</button>
        		<a class="navbar-brand" href="<%= root_path %>">FotoShare</a>
      		</div>
      		<div class="collapse navbar-collapse" id="navbar-collapse-01">
        		<ul class="nav navbar-nav navbar-left">
        			<% if !logged_in? %>
        				<li>
        					<%= link_to "Login", login_path %>
        				</li>
        				<li>
        					<%= link_to "Sign up", signup_path %>
        				</li>
        			<% end %>
         		</ul>
         		<form class="navbar-form navbar-right" action="#" role="search">
          			<div class="form-group">
            			<div class="input-group">
              				<input class="form-control" id="navbarInput-01" type="search" placeholder="Search">
				            <span class="input-group-btn">
				              <button type="submit" class="btn"><span class="fui-search"></span></button>
				            </span>
            			</div>
          			</div>
        		</form>
         		<ul class="nav navbar-nav navbar-right rightnav">
         			<li class="dropdown">
	                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                    		<span class="fui-mail"></span> 
	                    		<% if current_user.inverse_pending_relationships.length > 0 %>
									<span class="navbar-unread">
										<%= current_user.inverse_pending_relationships.length %>
									</span>
	                    		<% end %>
	                    		<b class="caret"></b>
	                    	</a>
	                    <span class="dropdown-arrow"></span>
	                    <ul class="dropdown-menu">
		                    <% if current_user.inverse_pending_relationships.length == 0 %>
								<li>
									<a href="">(no relationship requests)</a>
								</li>
							<% else %>
								<% for r in current_user.inverse_pending_relationships %>
									<li>
										<%= r.relationship.firstname + " " + r.relationship.lastname %>
										wants you add you to: <%= r.group.name %>
									</li>
								<% end %>
		                    <% end %>
	                    </ul>
	                </li>
         			<li class="dropdown">
	                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">+ <b class="caret"></b></a>
	                    <span class="dropdown-arrow"></span>
	                    <ul class="dropdown-menu">
		                    <li><a href="#">Add a new album</a></li>
		                    <li><a href="#">Upload a new photo</a></li>
	                    </ul>
	                </li>
         			<li class="dropdown">
	                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                    	<span class="fui-user"></span> 
	                    	<b class="caret"></b>
	                    </a>
	                    <span class="dropdown-arrow"></span>
	                    <ul class="dropdown-menu">
		                    <li>
		                    	<%= link_to "Profile", user_path(current_user) %>
		                    </li>
		                    <li class="divider"></li>
		                    <li>
		                    	<%= link_to "Log out", logout_path, method: "delete" %>
		                    </li>
	                    </ul>
	                </li>
         		</ul>
      		</div><!-- /.navbar-collapse -->
    	</nav><!-- /navbar -->
    </div>
</div> <!-- /row -->
