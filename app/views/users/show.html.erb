
<h1>Hello <%= @user.username %>!</h1>

<h2>Groups</h2>
<ul>
	<% @user.user_groups.each do |group| %>
		<li>
			<%= group.name %>
		</li>
	<% end %>
</ul>

<h2>Pending Relationship Requests</h2>

<ul>
	<% for r in @user.relationships %>
		<% if r.status == "pending" %>
			<li>
				<%= r.relationship.username %>
				Group: <%= r.usergroup.name %> 
				<%= link_to "remove", r, :method => :delete %> 
			</li>
		<% end %>
	<% end %>
</ul>
